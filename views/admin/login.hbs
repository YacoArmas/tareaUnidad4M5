<form action="/admin/login" method="post">
  <div class="mb-3">
    <label for="usuarioInput" class="form-label">Usuario</label>
    <input
      name="usuario"
      type="text"
      class="form-control"
      id="usuarioInput"
      aria-describedby="usuarioHelp"
    />

  </div>
  <div class="mb-3">
    <label for="passwordInput" class="form-label">Contraseña</label>
    <input
      name="password"
      type="password"
      class="form-control"
      id="passwordInput"
    />
  </div>
  {{#if error}}
    <p id="errormsg">Usuario o Contraseña incorrectos </p>
  {{/if}}
  <button id="button" type="submit" class="btn btn-primary">Acceder</button>
</form>